<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edtNum1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="숫자 1"
        android:textSize="36dp"></EditText>

    <EditText
        android:id="@+id/edtNum2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="숫자 2"
        android:textSize="36dp"></EditText>

    <RadioGroup
        android:id="@+id/rdoGroup2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rdoCalcSum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="더하기" />

        <RadioButton
            android:id="@+id/rdoCalcSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="빼기" />

        <RadioButton
            android:id="@+id/rdoCalcMul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="곱하기" />

        <RadioButton
            android:id="@+id/rdoCalcDiv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="나누기" />
    </RadioGroup>

    <Button
        android:id="@+id/btnGoCalc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="계산하기" />

    <Button
        android:id="@+id/btnGoBackRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="돌아가기" />


</LinearLayout>